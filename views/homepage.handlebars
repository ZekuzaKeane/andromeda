<!-- homepage.handlebars -->

{{!-- Check if the data is still loading --}}
{{#if loading}}
<div class="spinner-border" role="status">
  <span class="sr-only">Loading...</span>
</div>
{{else}}
{{#if session.logged_in}}
<h2>Hello, {{session.user.userName}}!</h2>
<section>
  <h3>Your Constellations</h3>
  <ul>
    {{#each session.user.constellations}}
    <li>{{name}}</li>
    <!-- Display more constellation details as needed -->
    {{/each}}
  </ul>
</section>
<section>
  <h3>Your Comments</h3>
  <ul>
    {{#each session.user.comments}}
    <li>{{content}}</li>
    <!-- Display more comment details as needed -->
    {{/each}}
  </ul>
</section>
<!-- Add more sections for other user-related content -->
<a href="/create-constellation">Create Constellation</a>
{{else}}
<div class="d-flex flex-column justify-content-center">
  <div class="home-header text-center">
    <h2>Welcome to Constellation</h2>
  </div>
  <br>
  <div class="home-slogan text-center font-weight-normal">
    <p><i>Explore constellations created by our community. Sign up to create your own!</i></p>
  </div>
</div>
{{!-- <a href="/signup">Sign Up</a>
<a href="/login">Login</a> --}}

{{/if}}
{{/if}}


<div class="d-flex flex-wrap justify-content-center my-5">
  {{#each constellations as |constellation|}}
  <div class="col-md-4 col-sm-6 col-xs-12 mb-4">
    {{> constellation-details}}
  </div>
  {{/each}}
</div>