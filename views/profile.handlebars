<div class="profile-username d-flex justify-content-center">
  <h1 class="text-center font-weight-bold">{{constellation.username}}'s Constellation</h1>
</div>

<br />
<br />

<div class="socials-container d-flex flex-column justify-content-center text-center m-2">
  <div class="mb-3">
    {{#if constellation.social.twitter}}
    <a href="https://twitter.com/{{constellation.social.twitter}}" target="_blank" class="text-white font-weight-bolder">Twitter</a>
    {{/if}}
  </div>

  <div class="mb-3">
    {{#if constellation.social.instagram}}
    <a href="https://instagram.com/{{constellation.social.instagram}}" target="_blank" class="text-white font-weight-bolder">Instagram</a>
    {{/if}}
  </div>

  <div class="mb-3">
    {{#if constellation.social.github}}
    <a href="https://github.com/{{constellation.social.github}}" target="_blank" class="text-white font-weight-bolder">GitHub</a>
    {{/if}}
  </div>

  <div class="mb-3">
    {{#if constellation.social.youtube}}
    <a href="https://youtube.com/@{{constellation.social.youtube}}" target="_blank" class="text-white font-weight-bolder">YouTube</a>
    {{/if}}
  </div>

  <div class="mb-3">
    {{#if constellation.social.tiktok}}
    <a href="https://tiktok.com/@{{constellation.social.tiktok}}" target="_blank" class="text-white font-weight-bolder">TikTok</a>
    {{/if}}
  </div>

  <div class="mb-3">
    {{#if constellation.social.twitch}}
    <a href="https://twitch.tv/{{constellation.social.twitch}}" target="_blank"  class="text-white font-weight-bolder">Twitch</a>
    {{/if}}
  </div>

</div>